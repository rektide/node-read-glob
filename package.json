{
  "name": "read-glob",
  "version": "2.1.0",
  "description": "Search files with glob pattern and read them asynchronously",
  "repository": "shinnn/node-read-glob",
  "author": {
    "name": "Shinnosuke Watanabe",
    "url": "https://github.com/shinnn"
  },
  "scripts": {
    "pretest": "jscs *.js && eslint *.js",
    "test": "node test.js | tap-spec",
    "coverage": "istanbul cover test.js",
    "coveralls": "${npm_package_scripts_coverage} && istanbul-coveralls"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/shinnn/node-read-glob/blob/master/LICENSE"
    }
  ],
  "files": [
    "index.js"
  ],
  "keywords": [
    "file",
    "files",
    "fs",
    "glob",
    "pattern",
    "match",
    "read",
    "async",
    "asynchronous",
    "asynchronously"
  ],
  "dependencies": {
    "assert-fs-readfile-option": "^1.0.0",
    "glob": "^5.0.3",
    "read-multiple-files": "^1.1.0",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^0.16.2",
    "istanbul": "^0.3.7",
    "istanbul-coveralls": "^1.0.2",
    "jscs": "^1.11.3",
    "tap-spec": "^2.2.2",
    "tape": "^3.5.0"
  },
  "jscsConfig": {
    "preset": "google",
    "maximumLineLength": 98,
    "requireBlocksOnNewline": true,
    "validateLineBreaks": "LF"
  }
}
